#!/bin/sh
mapping=(
"bmenu                           ===> $TERMINAL -e bmenu
morc_menu                        ===> morc_menu
pulsemixer                       ===> $TERMINAL -g 100x40 -e pulsemixer
alsamixer                        ===> $TERMINAL -g 100x40 -e alsamixer
screenshot full screen           ===> i3-scrot -d
screenshot active window         ===> i3-scrot -w
screenshot selection             ===> i3-scrot -s
start compton                    ===> compton -b
kill compton                     ===> pkill compton
kill unresponsive window (xkill) ===> xkill
autocliker                       ===> ~/Scripts/autoclicker
select layout                    ===> ~/Scripts/dmenu_layout"
)
keys="$(echo "$mapping" | sed -e 's/===>.*$//g')"
values="$(echo "$mapping" | sed -e 's/^.*===>//g')"

result=$(echo "$keys" | dmenu -l 5 -i -p "Layout Profile")
if [[ "$result" ]]; then
  matching_line_number=$(echo "$keys" | sed -n "/$result/ =")
  exec $(echo "$values" | sed -n "$matching_line_number p")
fi
if [[ "$result" ]]; then
  (exec "$result")
fi
