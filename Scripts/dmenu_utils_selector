#!/bin/sh
keys=(
"bmenu
morc_menu
pulsemixer
alsamixer
screenshot full screen
screenshot active window
screenshot selection
start compton
kill compton
kill unresponsive window (xkill)
autocliker
select layout"
)

values=(
"$TERMINAL -e bmenu
morc_menu
$TERMINAL -g 100x40 -e pulsemixer
$TERMINAL -g 100x40 -e alsamixer
i3-scrot -d
i3-scrot -w
i3-scrot -s
compton -b
pkill compton
xkill
~/Scripts/autoclicker
~/Scripts/dmenu_layout"
)

result=$(echo "$keys" | dmenu -l 5 -i -p "Layout Profile")
if [[ "$result" ]]; then
  matching_line_number=$(echo "$keys" | sed -n "/$result/ =")
  exec $(echo "$values" | sed -n "$matching_line_number p")
fi
if [[ "$result" ]]; then
  (exec "$result")
fi
