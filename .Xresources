! Onedark colors
#define base00 #282c34
#define base01 #353b45
#define base02 #3e4451
#define base03 #545862
#define base04 #565c64
#define base05 #abb2bf
#define base06 #b6bdca
#define base07 #c8ccd4
#define base08 #e06c75
#define base09 #d19a66
#define base0A #e5c07b
#define base0B #98c379
#define base0C #56b6c2
#define base0D #61afef
#define base0E #c678dd
#define base0F #be5046

#define background_opacity 80


!#ifdef background_opacity
!*background:                      [background_opacity]base00
!#else
!*background:                      base00
!#endif
*background: base00
*foreground: base05
*fading: 15
*fadeColor: black
*cursorColor: base05
*pointerColorBackground: #2B2C2B
*pointerColorForeground: #16A085

!! black dark/light
*color0:  base00
*color8:  base03
!! red dark/light
*color1:  base08
*color9:  base08
!! green dark/light
*color2:  base0B
*color10: base0B
!! yellow dark/light
*color3:  base0A
*color11: base0A
!! blue dark/light
*color4:  base0D
*color12: base0D
!! magenta dark/light
*color5:  base0E
*color13: base0E
!! cyan dark/light
*color6:  base0C
*color14: base0C
!! white dark/light
*color7:  base05
*color15: base07

Xcursor.theme: Breeze
Xcursor.size: 0

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!XTerm*background: #2b2b2b
!XTerm*foreground: #e7e7e7
!XTerm*pointerColor: #16A085
XTerm*faceName: Hack
XTerm*faceSize: 11
XTerm.background: base00
XTerm*reverseVideo: on
XTerm*borderLess: true

! For sane copy pasting via clipboard
XTerm*selectToClipboard: true
XTerm*VT100*translations: #override \n\
    Ctrl Shift <Key>V:  insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C:        select-end(CLIPBOARD)

! For all options run "uxrvt --help"
URxvt.font: xft:Hack:style=Regular:size=11
URxvt.letterSpace: -2
URxvt.perl-ext-common: tabbed
URxvt.depth: 32
URxvt.background: [80]#000000
URxvt*scrollBar: false
URxvt*mouseWheelScrollPage: false
URxvt*cursorBlink: true
URxvt*background: black
URxvt*foreground: grey
URxvt*saveLines: 5000

! Disable annoying yellow box when ctrl-shift-ing
URxvt.iso14755: false
URxvt.iso14755_52: false
