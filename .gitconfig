[push]
  # I never want to type --set-upstream ever again
  default = upstream
[core]
  editor = nvim
[credential]
  helper = cache --timeout=3600
[alias]
  c = commit
  co = checkout
  sw = switch
  st = status
  icommit = commit --no-verify
  b = !git --no-pager branch
  hist = log --oneline --graph
  bclean = "!f() { git branch | grep -v master | xargs git branch -d; }; f"
[pager]
  stash = false
[pull]
  rebase = false
[include]
  path = ~/.gitconfig.user
